
<h2 class="subtitle">研修日報(<%= @report.username %>)</h2>
<ul>
  <li>実施日：<%= @report.date %></li>
  <li>研修担当者：<%= @report.teacher %></li>
  <li>目標：<%= @report.target %></li>
  <li>場所：<%= @report.place %></li>
  <li>業務内容：<%= @report.body %></li>
</ul>
<% if @report.user_id == current_user.id %>
  <%= link_to "修正", "/reports/#{@report.id}/edit", class: "button is-primary" %> 
  <%= link_to "削除", "/reports/#{@report.id}/delete", method: :delete, class: "button is-danger" %>
<% end %>
