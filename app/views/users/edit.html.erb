<%= form_for @user, url: "/users/#{@user.id}", method: :patch do|f| %>
  <%= f.label :username, "ユーザ名", class: "label"  %>
  <%= f.text_field :username,value: "#{@user.username}", class: 'input' %>
  
  <%= f.label :email, "メールアドレス", class: "label" %>
  <%= f.email_field :email, value: "#{@user.email}", class: "input" %>
  
  <%= f.label :profile, "プロフィール", class: "label" %>
  <%= f.text_field :profile, value: "#{@user.profile}", class: "input" %>
  
  <%= f.submit "修正", class: "button is-primary" %>
<% end %>